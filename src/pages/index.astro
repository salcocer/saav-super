---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Github from "../icons/Github.astro";
import Linkedin from "../icons/Linkedin.astro";
import SocialPill from "../components/SocialPill.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<section class="w-full lg:w-[740px] mx-auto py-44">
			<h1
				class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4"
			>
				Hey, soy Alejandro
				<a
					href="https://www.linkedin.com/in/%F0%9F%91%8Balejandro-a-218939202/"
					rel="noopener"
					target="_blank"
					class="flex justify-content items-center"
				>
					<Badge>Diponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-2xl">
				5 a√±os de experiencia. Crear soluciones web.
			</h2>

			<nav class="flex gap-x-2 mt-18">
				<SocialPill>
					<Linkedin class="w-6 h-6 fill-white" />
					Linkedin
				</SocialPill>

				<SocialPill>
					<Github class="w-6 h-6 fill-white" />
					Github
				</SocialPill>
			</nav>
		</section>
	</main>
</Layout>
